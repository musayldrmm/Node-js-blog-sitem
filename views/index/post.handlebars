<section class="page-image page-image-contact md-padding">
    <h1 class="text-white text-center text-success">Post-ekle</h1>
</section>

    
    <!--==========================
    Contact Section
============================-->
<section id="contact" class="md-padding">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<form  action="/posts/test" method="POST" enctype="multipart/form-data" id="contactForm" name="sentMessage" novalidate="novalidate">
					<div class="row">
						<div class="col-md-12">
							<div class="form-group" >
								<input class="form-control" id="tittle-add" name="title" type="text" placeholder="Post-Tittle *" required="required" data-validation-required-message="Post-Tittle">
								<p class="help-block text-danger"></p>
							</div>
								<div class="form-group" >
								<textarea class="form-control" id="post-add" name="content" placeholder="Your post *" required="required" data-validation-required-message="Please enter a message."></textarea>
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group" >
								<select class="form-control" name="category">
									{{#each categories}}
									<option value="{{id}}">{{name}}</option>
									{{/each}}
								</select>
							</div>
							{{!-- 	<div class="form-group" >
								<input class="form-control"  name="post_image" type="file" required="required" data-validation-required-message="Post-Tittle">
								<p class="help-block text-danger"></p>
							</div> --}}
						</div>
						<div class="clearfix"></div>
						<div class="col-lg-12 text-center">
							<div id="success"></div>
							<button id="sendMessageButton" class="main-btn" type="submit">Postu Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
	
	

</section>

