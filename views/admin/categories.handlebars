<div class="container">
      {{> adminnav}}
      <div class="row">
            <div class="col-md-4">
                  <div class="row">
                        <div class="col-lg-12">
                              <form action="" method="POST" enctype="multipart/form-data" id="contactForm"
                                    name="sentMessage" novalidate="novalidate">
                                    <div class="row">
                                          <div class="col-md-12">
                                                <div class="form-group">
                                                      <input class="form-control" id="tittle-add" name="name"
                                                            type="text" placeholder="Category-name *"
                                                            required="required"
                                                            data-validation-required-message="please enter category">
                                                      <p class="help-block text-danger"></p>
                                                </div>
                                          </div>
                                          <div class="clearfix"></div>
                                          <div class="col-lg-12 text-center">
                                                <div id="success"></div>
                                                <button id="sendMessageButton" class="main-btn" type="submit">
                                                      Category ekle </button>
                                          </div>
                                    </div>
                              </form>
                        </div>
                  </div>


            </div>
            <div class="col-md-8" style="border: solid 1px;">
                  <table class="table">
                        <thead>
                              <tr>
                                    <th>ID</th>
                                    <th>NAME</th>
                                    <th>Delete</th>
                              </tr>
                        </thead>
                        <tbody>
                              {{#each categories}}
                              <tr>
                                    <td>{{_id}}</td>
                                    <td>{{name}}</td>
                                    <td>
                                          <form action="/admin/categories/{{id}}?_method=DELETE" method="POST">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <button type="submit" class="btn btn-danger">delete</button>
                                          </form>
                                    </td>
                              </tr>

                              {{/each}}
                        </tbody>
                  </table>
            </div>

      </div>
</div>