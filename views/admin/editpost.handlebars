<section id="contact" class="md-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <form action="/admin/link/{{post.id}}?_method=PUT" method="POST" enctype="multipart/form-data"
                    id="contactForm" name="sentMessage" novalidate="novalidate">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input class="form-control" id="tittle-add" name="title" type="text" value="{{post.title}}" required="required" data-validation-required-message="Post-Tittle">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" id="post-add" name="content"  required="required"    data-validation-required-message="Please enter a message.">{{post.content}}</textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <select class="form-control" name="category">
                                    {{#each categories}}
                                    <option value="{{id}}">{{name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            {{!-- <div class="form-group">
                                <input class="form-control" name="post_image" type="file" required="required"
                                    data-validation-required-message="Post-Tittle">
                                <p class="help-block text-danger"></p>
                            </div> --}}
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button id="sendMessageButton" class="main-btn" type="submit">Postu GÃ¼ncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>